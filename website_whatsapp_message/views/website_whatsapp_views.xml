<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record id="view_floating_whatsapp_form" model="ir.ui.view">
            <field name="name">floating_whatsapp.form</field>
            <field name="model">website_whatsapp</field>
            <field name="arch" type="xml">
                <form string="Configure WhatsApp Number">
                	<sheet>
                		<div class="oe_title">
                			<label for="phone" class="oe_edit_only" string="Floating Whatsapp Theme"/>
	                        <h1><field name="phone" /></h1>
                		</div>
                		<group>
	                        	<group>
	                        		<field name="phone" />
	                        		<field name="message" />
	                        		<field name="popup_message" />
	                        		<field name="header_title" />
	                        		<field name="position" />	                        	
	                        	</group>
	                        	<group>
	                        		<field name="size" />
	                        		<field name="auto_open_timeout" />
	                        		<field name="show_popup" />
                                    <field name="website_ids" widget="many2many_tags"/>
	                        	</group>
	                     </group>
                	</sheet>                
                </form>
           </field>
       </record>
       
        <record id="website_whatsapp_tree_view" model="ir.ui.view">
            <field name="name">configure_whatsapp.list</field>
            <field name="model">website_whatsapp</field>
            <field name="arch" type="xml">
                <tree string="Floating WhatsApp">
                	<field name="phone"/>
                </tree>
            </field>
          </record> 
          
          <record id="action_website_whatsapp" model="ir.actions.act_window">
            <field name="name">Configure WhatsApp</field>
            <field name="res_model">website_whatsapp</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="website_whatsapp_tree_view"/>
            <field name="target">current</field>
         </record>
          
       <menuitem name="Configure WhatsApp Number"
            id="menu_website_whatsapp"
            action="action_website_whatsapp"
            parent="website.menu_website_global_configuration"

            groups="base.group_no_one"/> 
            

	</data>
</odoo>